<!-- Change xmlns:app -> namespace can change -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wilson.customviewdemo_codeviewer.CodeViewer
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="#ccc"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:keywordColor="@color/red"
        app:literalColor="@color/green"
        app:primitiveColor="@color/red"
        app:variableColor="@color/blue"
        app:commentColor="@color/green"
        app:wrapLines="true"
        app:tabLength="4"
        app:language="java" />

</FrameLayout>
